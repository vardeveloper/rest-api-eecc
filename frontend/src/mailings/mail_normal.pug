              src!=handler.static_url("linea-v.jpg", _static_url),
              width="1",
              height="165",
              alt=""
            )

          td( style="width: 20px" )
            img.blank( 
              src!=handler.static_url("border-white.png", _static_url),
              width="20",
              height="1",
              alt=""
            )

          td( valign='top' style="width: 240px" )
            table.table-title( aling='center', cellpadding='0', cellspacing='0', border='0' )
              tr
                td
                  a( href='http://www.piensaprofuturo.com/', target='_blank' )
                    img( 
                      width='60',
                      height='45',
                      src!=handler.static_url('logo-blog'+(custom.img_sufix || '')+'.png', _static_url), 
                      alt='Blog Piensa Pro Futuro'
                    )

                td( style='width:15px;' )
                  img.blank( 
                    width='15px',
                    height='1',
                    src!=handler.static_url('border-white.png', _static_url)
                  )

                td
                  p.title
                    a( href='http://www.piensaprofuturo.com/', target='_blank' )
                      font( face='Trebuchet MS, Arial, Helvetica, sans-serif' )
                        | Blog Piensa
                        br
                        | Pro Futuro

            table.table-description( aling='center', cellpadding='0', cellspacing='0', border='0', style='width: 240px' )
              tr
                td
                  p.description
                    br
                    font( face="Trebuchet MS, Arial, Helvetica, sans-serif" ) 
                      | Sigue los consejos de nuestros especialistas en temas sobre AFP, experiencias de vida, responsabilidad social, salud, tecnolog&iacute;a, vida profesional y viajes.

              tr
                td( style='padding-top: 10px;' )
                  a( href="http://www.piensaprofuturo.com/", target="_blank", style="color: #006db7;") 
                    img( 
                      src!=handler.static_url('vermas'+(custom.img_sufix || '')+'.png', _static_url),  
                      width="67",
                      height="14",
                      alt="Ver m&aacute;s",
                       style="border: none;"
                    )


    table#footer( aling='center', cellpadding='0', cellspacing='0', border='0' )
      tr
        td
          img.separator( src!=handler.static_url('border-white.png', _static_url), width='100%', height='13', alt!='')
      tr
        td
          a( href='http://www.profuturo.com.pe', target='_blank' )
            block footer
              img.footer( src!=handler.static_url('footer'+(custom.img_sufix || '')+'.png', _static_url), width='571', height='43', alt!='http://www.profuturo.com.pe')

